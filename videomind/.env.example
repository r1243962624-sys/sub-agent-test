# VideoMind 环境变量配置
# 复制此文件为 .env 并填写实际值

# ========== API 密钥配置 ==========

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API 配置（可选）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepSeek API 配置（可选）
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ========== 模型配置 ==========

# 默认模型提供商：openai, anthropic, deepseek
MODEL_PROVIDER=openai

# 默认模型名称
# OpenAI: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
# Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
# DeepSeek: deepseek-chat
DEFAULT_MODEL=gpt-4-turbo-preview

# ========== 处理配置 ==========

# 默认输出目录
OUTPUT_DIR=./output

# 临时文件目录
TEMP_DIR=./temp

# 是否保留中间文件（音频、转写文本等）
KEEP_INTERMEDIATE_FILES=false

# 最大重试次数
MAX_RETRIES=3

# 重试延迟（秒）
RETRY_DELAY=5

# ========== Whisper 配置 ==========

# Whisper 模型大小：tiny, base, small, medium, large
WHISPER_MODEL=base

# 转写语言（auto 为自动检测）
WHISPER_LANGUAGE=auto

# ========== 下载配置 ==========

# 下载超时时间（秒）
DOWNLOAD_TIMEOUT=300

# 最大下载速度（KB/s，0 为不限速）
MAX_DOWNLOAD_SPEED=0

# ========== 日志配置 ==========

# 日志级别：DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./logs/videomind.log

# ========== 高级配置 ==========

# HTTP 代理（可选）
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# 自定义 yt-dlp 参数（JSON 格式）
# YTDLP_OPTIONS={"format": "best[height<=720]", "quiet": true}

# 自定义 FFmpeg 参数
# FFMPEG_ARGS="-acodec pcm_s16le -ar 16000 -ac 1"